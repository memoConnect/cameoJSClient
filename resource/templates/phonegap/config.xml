<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "<%= currentAppId %>"
        version   = "<%= currentVersion %>">
    <name><%= currentName %></name>
    <description>safer communication</description>
    <author href="www.cameonet.de" email="support@cameonet.de">cameoNet</author>

    <access origin="*" subdomains="true"  />
    <!-- <access origin="http://puship.cloudapp.net" /> -->
    <content src="index.html" />

    <log level="<%= logLevel %>"/>

    <preference name="phonegap-version" value="3.6.3" />

    <gap:platform name="android" />
    <gap:platform name="winphone" />
    <gap:platform name="ios" />

    <!-- <preference name="permissions" value="all-permissions" /> -->
    <preference name="permissions" value="none" />

    <!-- plugins origin from adobe -->
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.file-transfer" version="0.4.6" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />

    <!-- plugins thirdparty -->
    <!--<gap:plugin name="net.tunts.webintent" version="0.2.1" />
    <gap:plugin name="uk.co.ibcomputing.phonegapbuild.plugins.receivesendintents" version="0.2.1">
        <param name="LAUNCHMODE" value="singleTop" />
    </gap:plugin>-->
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.1.1" />
    <gap:plugin name="de.cameonet.cordova.contacts" version="0.2.12" />
    <!-- utils & debug -->
    <gap:plugin name="com.verso.cordova.clipboard" version="0.1.0" />
    <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" version="1.2.0" />
    <gap:plugin name="com.jamiestarke.webviewdebug" version="1.0.8" />

    <!-- multiplatform -->
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="orientation" value="portrait" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />

    <!-- android -->
    <preference name="KeepRunning" value="true"/>
    <preference name="LoadUrlTimeoutValue" value="5000" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ErrorUrl" value=""/>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <!-- build -->
    <!-- http://de.wikipedia.org/wiki/Liste_von_Android-Versionen -->
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-maxSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="15" />
    <preference name="android-installLocation" value="internalOnly" />
    <preference name="android-windowSoftInputMode" value="adjustResize" />

    <!-- ios -->
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="SuppressesIncrementalRendering" value="true" />

    <!-- statusbar -->
    <!-- <preference name="StatusBarOverlaysWebView" value="false" /> -->
    <!-- <preference name="StatusBarBackgroundColor" value="#555555" /> -->
    <!-- <preference name="StatusBarStyle" value="lightcontent" /> -->

    <!-- build -->
    <preference name="target-device" value="universal" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />

    <!-- other -->
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="default" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="true" />

    <!-- Icons paths relative to /www -->
    <icon src="res/icon/default.png" />

    <icon gap:platform="android" src="res/icon/android/icon-36-ldpi.png" gap:qualifier="ldpi" />
    <icon gap:platform="android" src="res/icon/android/icon-48-mdpi.png" gap:qualifier="mdpi" />
    <icon gap:platform="android" src="res/icon/android/icon-72-hdpi.png" gap:qualifier="hdpi" />
    <icon gap:platform="android" src="res/icon/android/icon-96-xhdpi.png" gap:qualifier="xhdpi" />

    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon gap:platform="ios" src="res/icon/ios/icon-60.png" width="60" height="60" />
    <icon gap:platform="ios" src="res/icon/ios/icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon gap:platform="ios" src="res/icon/ios/icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="res/icon/ios/icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="res/icon/ios/icon-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="res/icon/ios/icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon gap:platform="ios" src="res/icon/ios/icon-57.png" width="57" height="57" />
    <icon gap:platform="ios" src="res/icon/ios/icon-57@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon gap:platform="ios" src="res/icon/ios/icon-72.png" width="72" height="72" />
    <icon gap:platform="ios" src="res/icon/ios/icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon gap:platform="ios" src="res/icon/ios/icon-small-29.png" width="29" height="29" />
    <icon gap:platform="ios" src="res/icon/ios/icon-small-29@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon gap:platform="ios" src="res/icon/ios/icon-50.png" width="50" height="50" />
    <icon gap:platform="ios" src="res/icon/ios/icon-50@2x.png" width="100" height="100" />

    <icon gap:platform="winphone" src="res/icon/winphone/icon-62.png" width="99" height="99" />
    <icon gap:platform="winphone" src="res/icon/winphone/tile-173.png" width="159" height="159" gap:role="background" />

	<!-- Splash -->
    <gap:splash src="res/screen/splash.png" />

    <gap:splash gap:platform="android" src="res/screen/android/drawable-ldpi/screen.9.png" gap:qualifier="ldpi" />
    <gap:splash gap:platform="android" src="res/screen/android/drawable-mdpi/screen.9.png" gap:qualifier="mdpi" />
    <gap:splash gap:platform="android" src="res/screen/android/drawable-hdpi/screen.9.png" gap:qualifier="hdpi" />
    <gap:splash gap:platform="android" src="res/screen/android/drawable-xhdpi/screen.9.png" gap:qualifier="xhdpi" />
    <gap:splash gap:platform="android" src="res/screen/android/drawable-xxhdpi/screen.9.png" gap:qualifier="xxhdpi" />

    <gap:splash gap:platform="ios" src="res/screen/ios/Default~iphone.png" width="320" height="480" />
    <gap:splash gap:platform="ios" src="res/screen/ios/Default@2x~iphone.png" width="640" height="960" />
    <gap:splash gap:platform="ios" src="res/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136" />
    <gap:splash gap:platform="ios" src="res/screen/ios/Default-Portrait~ipad.png" width="768" height="1024 " />
    <gap:splash gap:platform="ios" src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048" />

    <gap:splash gap:platform="winphone" src="res/screen/windows-phone/screen-portrait.png" />
</widget>